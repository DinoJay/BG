
extends layout

block body
  link(href='/google_map.css', rel='stylesheet')
  link(href='/griddle.css', rel='stylesheet')
  link(href='/griddle_theme.css', rel='stylesheet')
  link(href='/comments.css', rel='stylesheet')
  script(src='/jquery-1.11.1.min.js', type="text/javascript")
  script(src='/tab.js', type="text/javascript")
  script(src='/modal.js', type="text/javascript")
  script(src='/notify.js', type="text/javascript")
  .header-off
  .row
    .col-sm-10
      h1 #{user.username}
    .col-sm-2
      a.pull-right(href='/users')
        img.img-circle.img-responsive(title='profile image',
        src=gravatarLink)
  .row
    .col-sm-3
      // left col
      ul.list-group
        li.list-group-item.text-muted Profile
        li.list-group-item.text-right
          span.pull-left
            strong Joined
          | #{user.customData.joined}
        li.list-group-item.text-right
          span.pull-left
            strong Last seen
          | #{user.customData.lastSeen}
        li.list-group-item.text-right
          span.pull-left
            strong Real name
          | #{user.fullName}
      .panel.panel-default
        .panel-heading
          | Website
          i.fa.fa-link.fa-1x
        .panel-body
          a(href='http://bootnipets.com') bootnipets.com
      ul.list-group
        li.list-group-item.text-muted
          | Activity
          i.fa.fa-dashboard.fa-1x
        li.list-group-item.text-right
          span.pull-left
            strong Shares
          | 125
        li.list-group-item.text-right
          span.pull-left
            strong Likes
          | 13
        li.list-group-item.text-right
          span.pull-left
            strong Created Events
          | 37
        li.list-group-item.text-right
          span.pull-left
            strong Followers
          | 78
      .panel.panel-default
        .panel-heading Social Media
        .panel-body
          i.fa.fa-facebook.fa-2x
          i.fa.fa-github.fa-2x
          i.fa.fa-twitter.fa-2x
          i.fa.fa-pinterest.fa-2x
          i.fa.fa-google-plus.fa-2x
    // /col-3
    .col-sm-9
      ul#myTab.nav.nav-tabs
        li.active
          a(href='#react-main-mount', data-toggle='tab') Created Events
        li
          a(href='#react-sub-mount', data-toggle='tab') Registered Events
      .tab-content
        #react-main-mount.tab-pane.active
        // /tab-pane
        #react-sub-mount.tab-pane

      script(src='/dashboard.bundle.js', type="text/javascript")
      // /tab-pane
    // /tab-content
  // /col-9
// /row
