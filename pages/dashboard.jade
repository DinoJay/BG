
extends layout

block body
  link(href='/google_map.css', rel='stylesheet')
  link(href='/griddle.css', rel='stylesheet')
  link(href='/griddle_theme.css', rel='stylesheet')
  link(href='/comments.css', rel='stylesheet')
  script(src='/lib/tab.js', type="text/javascript")
  script(src='/lib/modal.js', type="text/javascript")
  script(src='/lib/notify.js', type="text/javascript")
  script(src='/lib/bootstrap-tags.js', type="text/javascript")
  .row
    .col-sm-10
      h1 #{user.username}
    .col-sm-2
      a.pull-right(href='/users')
        img.img-circle.img-responsive(title='profile image',
        src=gravatarLink)
  .row
    .col-sm-3
      // left col
      ul.list-group
        li.list-group-item.text-muted Profile
        li.list-group-item.text-right
          span.pull-left
            strong Joined
          | #{user.customData.joined}
        li.list-group-item.text-right
          span.pull-left
            strong Last seen
          | #{user.customData.lastSeen}
        li.list-group-item.text-right
          span.pull-left
            strong Real name
          | #{user.fullName}
      ul.list-group
        li.list-group-item.text-muted
          | Activity
          i.fa.fa-dashboard.fa-1x
        li.list-group-item.text-right
          span.pull-left
            strong Created Tours
          | #{countCreated}
        li.list-group-item.text-right
          span.pull-left
            strong registered Tours
          | #{countRegistered}
    // /col-3
    .col-sm-9
      ul#myTab.nav.nav-tabs
        li.active
          a(href='#react-main-mount', data-toggle='tab') Created Events
        li
          a(href='#react-sub-mount', data-toggle='tab') Registered Events
      .tab-content
        #react-main-mount.tab-pane.active
        // /tab-pane
        #react-sub-mount.tab-pane

      script(src='/dashboard.bundle.js', type="text/javascript")
      // /tab-pane
    // /tab-content
  // /col-9
// /row
